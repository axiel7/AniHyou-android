<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AniHyou" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorAccent">@color/primary</item>
    </style>

    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="postSplashScreenTheme">@style/Theme.AniHyou</item>
    </style>

    <style name="Theme.AppWidget.AppWidgetContainer" parent="android:Theme.Material.NoActionBar" />

    <style name="Widget.AppWidget.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/widget_background</item>
    </style>

    <style name="WearActivityTheme.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="postSplashScreenTheme">@android:style/Theme.DeviceDefault</item>
    </style>
</resources>